<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.chatapplicatie.LoginController"
            prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #0f172a;">
    <children>
        <VBox layoutX="150.0" layoutY="100.0" spacing="15.0" alignment="CENTER"
              style="-fx-background-color: #1f2937; -fx-background-radius: 10;"
              prefWidth="300.0" prefHeight="250.0">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>
            <Label text="Login bij TeamFlow" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
            <TextField fx:id="usernameField" promptText="Gebruikersnaam"
                       style="-fx-background-color: #374151; -fx-text-fill: white;" />
            <PasswordField fx:id="passwordField" promptText="Wachtwoord"
                           style="-fx-background-color: #374151; -fx-text-fill: white;" />
            <Button text="Login" onAction="#handleLogin"
                    style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label fx:id="errorLabel" textFill="RED" visible="false"/>
        </VBox>
    </children>
</AnchorPane>