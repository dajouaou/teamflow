<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<Dialog fx:id="linkDialog" title="Link to Scrum Entity"
        xmlns="http://javafx.com/javafx/8"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.example.chatapplicatie.LinkDialog">

    <dialogPane>
        <DialogPane>
            <content>
                <VBox spacing="10">
                    <Label text="Select entity type:"/>
                    <ComboBox fx:id="entityTypeCombo">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Epic"/>
                                <String fx:value="User Story"/>
                                <String fx:value="Task"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <ListView fx:id="entityList" prefHeight="200" prefWidth="300"/>
                </VBox>
            </content>
            <buttonTypes>
                <ButtonType text="Link" buttonData="OK_DONE"/>
                <ButtonType text="Cancel" buttonData="CANCEL_CLOSE"/>
            </buttonTypes>
        </DialogPane>
    </dialogPane>
</Dialog>