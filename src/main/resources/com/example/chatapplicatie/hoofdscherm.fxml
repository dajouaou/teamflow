<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: linear-gradient(to bottom right, #0f172a, #1e3a8a);" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chatapplicatie.Hoofdscherm">

        <!-- Top Bar -->
        <top>
            <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #1e293b; -fx-padding: 10;">
         <HBox prefHeight="107.0" prefWidth="63.0" />
                <ImageView fitHeight="150.0" fitWidth="150.0" preserveRatio="true">
                    <Image url="@../../../../resources/com/example/chatapplicatie/images/teamflow-logo.png" />
                </ImageView>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="lblWelcome" style="-fx-text-fill: #94a3b8; -fx-font-size: 14;" />
            </HBox>
        </top>

        <!-- Center Content -->
        <center>
            <VBox alignment="CENTER" spacing="30">

                <Label style="-fx-text-fill: white; -fx-font-size: 28; -fx-font-weight: bold;" text="Welkom bij TeamFlow" />

                <VBox alignment="CENTER" spacing="15">
                    <Button fx:id="btnScrumBoard" onAction="#switchToScrumBoard" prefHeight="50" prefWidth="250" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-background-radius: 8;" text="Ga naar ScrumBoard">
                        <graphic>
                            <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                                <Image url="@../../../../resources/com/example/chatapplicatie/images/scrum-icon.png" />
                            </ImageView>
                        </graphic>
                    </Button>

                    <Button fx:id="btnReports" onAction="#switchToReports" prefHeight="50" prefWidth="250" style="-fx-background-color: #4f46e5; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-background-radius: 8;" text="Bekijk Rapporten">
                        <graphic>
                            <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                                <Image url="@../../../../resources/com/example/chatapplicatie/images/report-icon.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                </VBox>
            </VBox>
        </center>

        <!-- Bottom Bar -->
        <bottom>
            <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-background-color: #1e293b; -fx-padding: 10;">
                <Button fx:id="btnLogout" onAction="#handleLogout" style="-fx-background-color: transparent; -fx-text-fill: #94a3b8; -fx-border-color: #94a3b8; -fx-border-radius: 4;" text="Log uit" />
         <HBox prefHeight="27.0" prefWidth="132.0" />
                <Button fx:id="btnExit" onAction="#handleExit" style="-fx-background-color: #7f1d1d; -fx-text-fill: white; -fx-background-radius: 4;" text="Afsluiten" />
            </HBox>
        </bottom>
    </BorderPane>
