<BorderPane xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.chatapplicatie.Hoofdscherm"
            style="-fx-background-color: linear-gradient(to bottom right, #0f172a, #1e3a8a);">

    <top>
